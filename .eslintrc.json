{
	"parser": "@typescript-eslint/parser",
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"plugins": ["@typescript-eslint"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"semi": ["warn", "always"],
		"quotes": ["warn", "single"],
		"prettier/prettier": "warn",
		"@typescript-eslint/no-unused-vars": "warn"
	},
	"env": {
		"node": true,
		"es6": true
	}
}
